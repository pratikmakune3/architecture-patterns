@model Tour
@{
    ViewData["Title"] = "Our Tours";
}

<header id="contentHeader" class="hasCrumbs">
    <h1>@Model.Name</h1>
</header>
<article id="mainArticle">
    <h1>@Model.Name</h1>
    <div>
        <img src="/images/@Model.Image" alt="@Model.Name" width="195" height="120" />
        <p>@Model.Description</p>
        <a href="/Booking/@Model.Id" title="Book Now!" class="book">book now!</a>
    </div>
</article>