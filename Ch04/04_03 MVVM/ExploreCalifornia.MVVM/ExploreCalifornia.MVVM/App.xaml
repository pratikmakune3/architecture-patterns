<Application x:Class="ExploreCalifornia.MVVM.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ExploreCalifornia.MVVM"
             xmlns:vm="clr-namespace:ExploreCalifornia.MVVM.ViewModels"
             xmlns:views="clr-namespace:ExploreCalifornia.MVVM.Views"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:BookingsViewModel}">
            <views:BookingsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BookingViewModel}">
            <views:BookingView />
        </DataTemplate>
    </Application.Resources>
</Application>
